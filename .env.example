# Observer-Eye Observability Platform - Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
ENVIRONMENT=development
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://observer:observer_pass@postgres:5432/observability
POSTGRES_DB=observability
POSTGRES_USER=observer
POSTGRES_PASSWORD=observer_pass

# Analytics Data Warehouse
WAREHOUSE_URL=clickhouse://analytics:analytics_pass@clickhouse:8123/warehouse
CLICKHOUSE_DB=warehouse
CLICKHOUSE_USER=analytics
CLICKHOUSE_PASSWORD=analytics_pass

# Time Series Database
TIMESCALE_URL=postgresql://observer:observer_pass@timescaledb:5432/timeseries
TIMESCALE_DB=timeseries

# Cache and Session Store
REDIS_URL=redis://redis:6379/0

# Authentication & Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
MFA_SECRET_KEY=your-mfa-secret-key-change-this-in-production

# Django Configuration
DJANGO_SECRET_KEY=your-django-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# API Endpoints
API_BASE_URL=http://localhost:8000
WS_BASE_URL=ws://localhost:8000

# Monitoring
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_SECRET_KEY=your-grafana-secret-key

# External Services (Production)
# EXTERNAL_API_KEY=your-external-api-key
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user
# SMTP_PASSWORD=your-smtp-password

# SSL Configuration (Production)
# SSL_CERT_PATH=/etc/ssl/certs/observer-eye.crt
# SSL_KEY_PATH=/etc/ssl/private/observer-eye.key

# Backup Configuration
# BACKUP_S3_BUCKET=observer-eye-backups
# BACKUP_S3_ACCESS_KEY=your-s3-access-key
# BACKUP_S3_SECRET_KEY=your-s3-secret-key
# BACKUP_S3_REGION=us-west-2

# Log Levels
LOG_LEVEL=INFO
DJANGO_LOG_LEVEL=INFO
FASTAPI_LOG_LEVEL=INFO

# Performance Tuning
# POSTGRES_MAX_CONNECTIONS=100
# REDIS_MAX_MEMORY=2gb
# CLICKHOUSE_MAX_MEMORY_USAGE=4000000000