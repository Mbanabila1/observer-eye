# Observer-Eye Observability Platform - Production Environment Configuration
# Copy this file to .env.prod and update the values for your production environment

# Application Environment
ENVIRONMENT=production
NODE_ENV=production

# Database Configuration (Use strong passwords in production)
DATABASE_URL=postgresql://observer:CHANGE_THIS_PASSWORD@postgres:5432/observability
POSTGRES_DB=observability
POSTGRES_USER=observer
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD

# Analytics Data Warehouse
WAREHOUSE_URL=clickhouse://analytics:CHANGE_THIS_PASSWORD@clickhouse:8123/warehouse
CLICKHOUSE_DB=warehouse
CLICKHOUSE_USER=analytics
CLICKHOUSE_PASSWORD=CHANGE_THIS_PASSWORD

# Time Series Database
TIMESCALE_URL=postgresql://observer:CHANGE_THIS_PASSWORD@timescaledb:5432/timeseries
TIMESCALE_DB=timeseries

# Cache and Session Store
REDIS_URL=redis://redis:6379/0

# Authentication & Security (MUST CHANGE IN PRODUCTION)
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
MFA_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_MFA_SECRET_KEY

# Django Configuration (MUST CHANGE IN PRODUCTION)
DJANGO_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_DJANGO_SECRET_KEY
ALLOWED_HOSTS=your-domain.com,api.your-domain.com

# API Endpoints (Update with your production URLs)
API_BASE_URL=https://api.your-domain.com
WS_BASE_URL=wss://api.your-domain.com

# Monitoring
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
GRAFANA_SECRET_KEY=CHANGE_THIS_GRAFANA_SECRET_KEY

# External Services
EXTERNAL_API_KEY=your-external-api-key
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/observer-eye.crt
SSL_KEY_PATH=/etc/ssl/private/observer-eye.key

# Backup Configuration
BACKUP_S3_BUCKET=observer-eye-backups-prod
BACKUP_S3_ACCESS_KEY=your-s3-access-key
BACKUP_S3_SECRET_KEY=your-s3-secret-key
BACKUP_S3_REGION=us-west-2

# Log Levels (Production optimized)
LOG_LEVEL=WARNING
DJANGO_LOG_LEVEL=WARNING
FASTAPI_LOG_LEVEL=INFO

# Performance Tuning (Production optimized)
POSTGRES_MAX_CONNECTIONS=200
REDIS_MAX_MEMORY=4gb
CLICKHOUSE_MAX_MEMORY_USAGE=8000000000

# Security Headers
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=True